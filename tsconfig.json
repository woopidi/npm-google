{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "lib": [
            "es2015"
        ],
        "outDir": "./dist",
        "strict": false,
        "sourceMap": true
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*",
        ".serverless/**/*",
        ".webpack/**/*",
        "_warmup/**/*",
        ".vscode/**/*",
        "**/*.spec.ts"
    ]
}